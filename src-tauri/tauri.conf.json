{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meerkat-desktop",
  "version": "0.2.0-1",
  "identifier": "com.meerkat-desktop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Meerkat Desktop",
        "width": 1200,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 900,
        "decorations": false,
        "transparent": true,
        "maximizable": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/meerkat.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
